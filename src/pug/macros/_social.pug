-
  var socialItemNameArr = [
    "fb",
    "ln",
    "in",
    "g+",
    "tw",
    "pi"
  ];

.social.wow.wowFadeUp(data-animation-delay="0.3s")
  ul.social__list
    -for(var i = 0, len = socialItemNameArr.length; i < len; i++)
      li.social__item
        a(href="" title="" class="social__link")
          +icon("ico-" + socialItemNameArr[i])


