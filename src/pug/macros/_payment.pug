// PAYMENT :: START

-
  var paymentNameArr = [
  "img-skrill",
  "img-payFast",
  "img-visa",
  "img-paypal",
  "img-mc",
  "img-neteller",
  "img-wire"
  ];

.payment
  p.payment__title.wow.wowFadeUp(data-animation-delay="0.4s")!= "We Accept"

  ul.payment__list.wow.wowFadeUp(data-animation-delay="0.45s")
    -for(var i = 0, len = paymentNameArr.length; i < len; i++)
      li.payment__item.wow.wowFadeUp(
        data-animation-delay!= (0.5 + parseFloat(0.1 * i)).toFixed(1) + "s"
      )
        img(
          src="./img/" + paymentNameArr[i] + ".png"
          srcset="./img/" + paymentNameArr[i] + "@2x.png 2x"
          title=""
          alt=""
          class="techPartner__img"
        )

// PAYMENT :: END