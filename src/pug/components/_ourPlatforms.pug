mixin platformsBlock(iconName, title, text, boolBtn, delayT)
  .platforms__block.wow.wowFadeUp(data-animation-delay!= delayT + "s")

    .platforms__block-left
      .platforms__block-icon
        i.icon(class!= iconName)

    .platforms__block-right
      p.platforms__block-title!= title
      p.platforms__block-text!= text

      if(!boolBtn)
        a(href="#" class="platforms__block-link link__more" title="")
          != "Read more"
          span
      else
        a.platforms__block-btn(href="#" title="")!= "Download"


