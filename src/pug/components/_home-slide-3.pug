-
  var sectionMenuArr = [
    "Forex",
    "Futures",
    "Indices",
    "Shares",
    "Metals",
    "Energies"
  ];
  var sectionDataMenu = [
    "EURUSD",
    "GBPUSD",
    "USDJPY",
