// PORTAL :: START

-
  var portalBlock0 = [
    "Banners",
    "Brochures",
    "Videos",
    "Email Templates"
  ];
  var portalBlock1 = [
    "Wallpapers",
    "Presentations",
    "Corporate Presentations",
    "Logos"
  ];
  var portalBlock2 = [
    "Print Ads",
    "Business Cards",
    "Instant Message Templates",
    "Tutorials and Guides"
  ];


mixin portalBlock(dataArr)
  ul.portal__list
    -for(var i = 0, len = dataArr.length; i < len; i++)
      li.portal__item.wow.wowFadeUp(
        data-animation-delay!= (0.5 + parseFloat(0.1 * i)).toFixed(1) + "s"
      )
        i.icon.icon-approve
        span!= dataArr[i]

.portal#theifxmarketingportal

  .container

    h2.portal__title.title.wow.wowFadeUp(data-animation-delay="0.3s")!= "The IFX Marketing Portal"
    p.portal__text.text.wow.wowFadeUp(data-animation-delay="0.4s")!= "Our Partners have easy access to a wealth of business information from the IFX Marketing Portal. It gives practical support through a diverse range of tried-and-tested marketing tools designed to attract new clients. In addition, it includes all the resources to set up attention-grabbing marketing material. More value for your clients - a higher conversion rate and higher commission for you."

  .container

    .portal__row
      .portal__col
        +portalBlock(portalBlock0)
      .portal__col
        +portalBlock(portalBlock1)
      .portal__col
        +portalBlock(portalBlock2)

// PORTAL :: END
