    "$5000",
    "$20000"
  ];
  var accountsPriceInfo = [
    "Min opening deposit",
    "Min opening deposit",
    "Min opening deposit",
    "Min opening deposit"
  ];


mixin accountsBlock(className, title, subtitle, text, price, priceInfo)
  .accounts__block(class!="accounts__block-" + className)
    .accounts__block-cover
      p.accounts__block-title!= title
      p.accounts__block-subtitle!= subtitle
      p.accounts__block-text!= text

      .accounts__block-wrap
        p.accounts__block-price!= price
        p.accounts__block-priceInfo!= priceInfo


.accounts#ouraccounts
  .accounts__bg

  .container

    .accounts__title-wrap
      h2.accounts__title.title!= "Our Accounts"
      p.accounts__text.text!= "Whether you’re a newbie or a seasoned professional, there’s an account especially designed for you."

    .accounts__row
      .accounts__col
        +accountsBlock("0", accountsTitle[0], accountsSubTitle[0], accountsText[0], accountsPrice[0], accountsPriceInfo[0])
        +accountsBlock("2", accountsTitle[2], accountsSubTitle[2], accountsText[2], accountsPrice[2], accountsPriceInfo[2])
      .accounts__col
        +accountsBlock("1", accountsTitle[1], accountsSubTitle[1], accountsText[1], accountsPrice[1], accountsPriceInfo[1])
        +accountsBlock("3", accountsTitle[3], accountsSubTitle[3], accountsText[3], accountsPrice[3], accountsPriceInfo[3])

// OUR ACCOUNTS :: END