section.section.section-4#section-4

  img(
    src="./img/img-slide-4_bg.png"
    srcset="./img/img-slide-4_bg@2x.png 2x"
    class="section__img wow wowFadeDown"
    title=""
    alt=""
    data-animation-delay="1s"
  )

  .container
    .section__row

      .section__col
        .section__col-wrap
          h1.section__title.wow.wowFadeUp(data-animation-delay="0.5s")!= "Start Trading in 3</br>Easy Steps"

          .section__col-cover.wow.wowFadeLeft(data-animation-delay="0.75s")
            .section__col-left
              p!= "1"
            .section__col-right
              p!= "Signup and Register"
              p!= "Sign up for an IFX account on Web, iOs or Android with an easy to use veri cation process."


      .section__col
        .section__col-wrap

          .section__col-cover.wow.wowFadeUp(data-animation-delay="0.75s")
            .section__col-left
              p!= "2"
            .section__col-right
              p!= "Fund your Account"
              p!= "Select your preferred deposit method and deposit money into your IFX Account."

      .section__col
        .section__col-wrap

          .section__block.wow.wowFadeDown(data-animation-delay="0.75s")
            span.section__block-line
            p.section__block-text!= "Start</br>Trading</br>Now"
            i.icon.icon-corner.section__block-icon

          .section__col-cover.wow.wowFadeRight(data-animation-delay="0.85s")
            .section__col-left
              p!= "3"
            .section__col-right
              p!= "Start Trading"
              p!= "Trade multi assets and multi currencies from one account."

